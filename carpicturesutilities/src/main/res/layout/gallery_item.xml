<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="104dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_gallery_item"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/image_placeholder"
        />
    <ImageView
        android:layout_alignTop="@+id/image_gallery_item"
        android:layout_alignEnd="@+id/image_gallery_item"
        android:id="@+id/image_edit_gallery_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_edit_black_24dp"
        android:tint="#8a000000"
        />
    <TextView
        android:id="@+id/text_view_gallery_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        tools:text="VIN"
        android:background="#86000000"
        android:layout_alignBottom="@+id/image_gallery_item"
        android:fontFamily="sans-serif-medium"
        />
</RelativeLayout>